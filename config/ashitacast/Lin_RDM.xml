<?xml version="1.0" encoding="UTF-8"?>
<ashitacast>
    <settings>
        <buffupdate>true</buffupdate>
        <statusupdate>true</statusupdate>
        <hpupdate>false</hpupdate>
        <autoupdate>true</autoupdate>
    </settings>

    <sets>
        <set name="Solo">
            <main>Earth Staff</main>
            <sub>Bugard Strap +1</sub>
            <!-- <range>none</range> -->
            <!-- <ammo>none</ammo> -->
            <head></head>
            <neck>Tiger Stole</neck>
            <lear>Cunning Earring</lear>
            <rear>Moldavite Earring</rear>
            <body>Vermillion Cloak</body>
            <hands>Savage Gauntlets</hands>
            <lring>Eremite's Ring</lring>
            <rring>Eremite's Ring</rring>
            <back>Red Cape +1</back>
            <waist>Mohbwa Sash</waist>
            <legs>Warlock's Tights</legs>
            <feet>Errant Pigaches</feet>
        </set>
        <!-- Resources -->
        <set name="+HP">
        </set>
        <set name="+MP">
            <main>Earth Staff</main>
            <sub>Bugard Strap +1</sub>
            <head>Warlock's Chapeau</head>
            <hands>Savage Gauntlets</hands>
            <body>Warlock's Tabard</body>
            <waist>Mohbwa Sash</waist>
            <legs>Savage Loincloth</legs>
            <feet>Errant Pigaches</feet>
        </set>
        <set name="+HHP">
        </set>
        <set name="+HMP">
            <main>Dark Staff</main>
            <sub>Bugard Strap +1</sub>
            <body>Errant Hpl.</body>
            <waist>Mohbwa Sash</waist>
        </set>
        <!-- Skills -->
        <set name="+ElementalMagic">
            <main>Ice Staff</main>
            <sub>Bugard Strap +1</sub>
        </set>
        <set name="+EnfeeblingMagic">
            <body>Warlock's Tabard</body>
        </set>
        <set name="+DarkMagic">
            <main>Dark Staff</main>
            <sub>Bugard Strap +1</sub>
        </set>
        <!-- Primary Stats -->
        <set name="+INT">
            <main>Chestnut Wand</main>
            <neck>Black Neckerchief</neck>
            <lear>Cunning Earring</lear>
            <body>Errant Hpl.</body>
            <lring>Eremite's Ring</lring>
            <rring>Eremite's Ring</rring>
            <waist>Penitent's Rope</waist>
        </set>
        <set name="+MND">
            <main>Chestnut Wand</main>
            <neck>Justice Badge</neck>
            <body>Errant Hpl.</body>
            <lring>Saintly Ring</lring>
            <rring>Saintly Ring</rring>
            <waist>Penitent's Rope</waist>
        </set>
        <!-- Secondary Stats -->
        <set name="+MAB">
            <neck>Uggalepih pendant</neck>
            <rear>Moldavite Earring</rear>
        </set>
        <set name="-Enmity">
            <body>Errant Hpl.</body>
            <waist>Penitent's Rope</waist>
        </set>
        <set name="+FastCast">
            <head>Warlock's Chapeau</head>
            <!-- <body>Duelist's Tabard</body> -->
            <!-- <lear>Loquac. Earring</lear> -->
        </set>
        <!-- Elemental Affinities -->
        <set name="+Dark">
            <main>Dark Staff</main>
            <sub>Bugard Strap +1</sub>
        </set>
        <set name="+Ice">
            <main>Ice Staff</main>
            <sub>Bugard Strap +1</sub>
        </set>
        <set name="+Earth">
            <main>Earth Staff</main>
            <sub>Bugard Strap +1</sub>
        </set>
        <set name="+Wind">
            <main>Wind Staff</main>
            <sub>Bugard Strap +1</sub>
        </set>
    </sets>

    <init>
        <command>/macro book 1</command>
        <command delay="1000">/macro set 1</command>
    </init>

    <inputcommands>
        <cmd input="/rdm">
            <equip set="Solo" />
        </cmd>
    </inputcommands>

    <idlegear>
        <if buffactive="sleep">
            <equip>
                <neck>Opo-opo Necklace</neck>
            </equip>
        </if>

        <if p_status="resting">
            <equip set="+HHP" />
            <equip set="+HMP" />
        </if>
        <else>
            <equip set="Solo" />
        </else>
    </idlegear>

    <jobability></jobability>

    <premagic>
        <equip set="+FastCast" />
    </premagic>

    <midmagic>
        <if ad_skill="HealingMagic">
            <equip set="+MND" />
        </if>
        <elseif ad_skill="ElementalMagic">
            <equip set="+INT" />
            <equip set="+MAB" />
            <equip set="+ElementalMagic" />
        </elseif>
        <elseif ad_skill="EnfeeblingMagic">
            <if ad_name="Slow*|Paralyze*|Silence*">
                <equip set="+MND" />
            </if>
            <elseif ad_name="Poison*|Sleep*|Blind*|Bind*|Gravity">
                <equip set="+INT" />
            </elseif>

            <if ad_element="dark">
                <equip set="+Dark" />
            </if>
            <elseif ad_element="ice">
                <equip set="+Ice" />
            </elseif>
            <elseif ad_element="earth">
                <equip set="+Earth" />
            </elseif>
            <elseif ad_element="wind">
                <equip set="+Wind" />
            </elseif>

            <equip set="+EnfeeblingMagic" />
        </elseif>
        <!-- <elseif ad_skill="EnhancingMagic">
            <if ad_name="Stoneskin"><equip set="Stoneskin" /></if>
            <else><equip set="Enhancing" /></else>
        </elseif> -->
        <elseif ad_skill="DarkMagic">
            <equip set="+INT" />
            <equip set="+DarkMagic" />
        </elseif>
        <elseif ad_skill="DivineMagic">
            <equip set="+MND" />
        </elseif>
    </midmagic>
</ashitacast>
