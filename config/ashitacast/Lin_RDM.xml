<?xml version="1.0" encoding="UTF-8"?>
<ashitacast>
    <settings>
        <buffupdate>true</buffupdate>
        <statusupdate>true</statusupdate>
        <hpupdate>false</hpupdate>
        <autoupdate>true</autoupdate>
    </settings>

    <sets>
        <set name="Standing">
            <main>Enhancing Sword</main>
            <!-- <sub>none</sub> -->
            <!-- <range>none</range> -->
            <!-- <ammo>none</ammo> -->
            <head>Warlock's Chapeau</head>
            <neck>Tiger Stole</neck>
            <lear>Cunning Earring</lear>
            <rear>Moldavite Earring</rear>
            <body>Warlock's Tabard</body>
            <hands>Savage Gauntlets</hands>
            <lring>San d'Orian Ring</lring>
            <rring>Empress Band</rring>
            <back>Red Cape +1</back>
            <waist>Friar's Rope</waist>
            <legs>Warlock's Tights</legs>
            <feet>Warlock's Boots</feet>
        </set>
        <set name="Resting">
        </set>
        <set name="+INT">
            <main>Chestnut Wand</main>
            <neck>Black Neckerchief</neck>
            <lear>Cunning Earring</lear>
            <lring>Eremite's Ring</lring>
            <rring>Eremite's Ring</rring>
        </set>
        <set name="+MAB">
            <rear>Moldavite Earring</rear>
        </set>
        <set name="+MND">
            <main>Chestnut Wand</main>
            <neck>Justice Badge</neck>
            <lring>Saintly Ring</lring>
            <rring>Saintly Ring</rring>
        </set>
        <set name="-cast">
            <head>Warlock's Chapeau</head>
            <!-- <body>Duelist's Tabard</body> -->
            <!-- <lear>Loquac. Earring</lear> -->
        </set>
    </sets>

    <init>
        <command>/macro book 1</command>
        <command delay="1000">/macro set 1</command>
    </init>

    <inputcommands>
        <cmd input="/rdm">
            <equip set="Standing" />
        </cmd>
    </inputcommands>

    <idlegear>
        <if p_status="resting"><equip set="Resting" /></if>
        <else><equip set="Standing" /></else>
    </idlegear>

    <premagic>
        <equip set="-cast" />
    </premagic>

    <midmagic>
        <if ad_skill="HealingMagic">
            <equip set="+MND" />
        </if>
        <elseif ad_skill="ElementalMagic">
            <equip set="+INT" />
            <equip set="+MAB" />
        </elseif>
        <elseif ad_skill="EnfeeblingMagic">
            <if ad_name="Slow*|Paralyze*|Silence*">
                <equip set="+MND" />
            </if>
            <elseif ad_name="Poison*|Sleep*|Blind*|Bind*|Gravity">
                <equip set="+INT" />
            </elseif>
        </elseif>
        <!-- <elseif ad_skill="EnhancingMagic">
            <if ad_name="Stoneskin"><equip set="Stoneskin" /></if>
            <else><equip set="Enhancing" /></else>
        </elseif> -->
        <elseif ad_skill="DarkMagic">
            <equip set="+INT" />
        </elseif>
        <elseif ad_skill="DivineMagic">
            <equip set="+MND" />
        </elseif>
    </midmagic>
</ashitacast>
